@*
    Requirements:
        Model: DateTime?
*@
@using System.Threading
@model DateTime?
@{
    DateTime dt = DateTime.Now;
    if (Model != null)
    {
        dt = Model.Value;
    }
}

@Html.TextBox(
    name: "",
    value: dt.ToString(Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern),
    htmlAttributes:new { @class = "datefield form-control", type = "date" })
