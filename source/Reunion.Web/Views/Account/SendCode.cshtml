@using Reunion.Web.Resources
@using Reunion.Web.Models
@model Reunion.Web.Models.SendCodeViewModel
@{
    ViewBag.LayoutVM = new LayoutViewModel(title: Resource1.AccountSendCodeTitle);
}
@section body
{

    <h2>@Resource1.AccountSendCodeTitle</h2>

    @using (Html.BeginForm("SendCode", "Account", new {ReturnUrl = Model.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>@Resource1.AccountSendVerificationCode</h4>
        <hr/>
        <div class="row">
            <div class="col-md-8">
                @Resource1.AccountSelectTwoFactor
                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                <input type="submit" value="Submit" class="btn btn-default"/>
            </div>
        </div>
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
