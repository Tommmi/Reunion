@using Reunion.Web.Resources
@using Reunion.Web.Models
@using TUtils.Common.MVC
@{
    ViewBag.LayoutVM = new LayoutViewModel(title: Resource1.AccountForgotYourPassword);
    var config = new HtmExtensionConfiguration
    {
        LabelBootstrapClasses = "col-sm-2",
        InputBootstrapClasses = "col-sm-5"
    };
}
@model ForgotPasswordViewModel

@section body
{
    <h2>@Resource1.AccountForgotYourPassword</h2>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <h4>@Resource1.AccountEnterYourEmail</h4>
        <hr/>
        @Html.ValidationSummary("", new {@class = "text-danger"})
        @Html.RenderFormGroup(m => m.Email, config);
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="@Resource1.AccountEmailLink"/>
            </div>
        </div>
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
